set nocompatible

syntax enable
filetype plugin indent on

set number
set laststatus=2
set visualbell

set tabstop=2 
set shiftwidth=2 
set expandtab
set wrap

set ignorecase
set smartcase
set incsearch
set hlsearch

set nobackup
set nowritebackup
set noswapfile

set path+=**

colorscheme Tomorrow-Night

